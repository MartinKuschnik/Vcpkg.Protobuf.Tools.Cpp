<?xml version="1.0" encoding="utf-8"?>
<Rule Name="ProtobufOptions" DisplayName="Protobuf" PageTemplate="generic" Description="Protobuf"
      xmlns="http://schemas.microsoft.com/build/2009/properties">
    <Rule.Categories>
        <Category Name="ProtobufGeneral" DisplayName="General" Description="General Protobuf Configuration" />
    </Rule.Categories>
    <Rule.DataSource>
        <DataSource Persistence="ProjectFile" Label="Protobuf" />
    </Rule.DataSource>
    <BoolProperty Name="ProtobufEnabled" DisplayName="Use Protobuf" Category="ProtobufGeneral" Default="true"
                Description="Use Protobuf for includes and libraries.">
        <BoolProperty.DataSource>
            <DataSource Persistence="ProjectFile" Label="Protobuf" />
        </BoolProperty.DataSource>
    </BoolProperty>
    <StringProperty Name="ProtobufOutDir" DisplayName="Protobuf Manifest Root" Category="ProtobufGeneral" Subtype="folder" Visible="true" Default="$(IntDir)"
                  Description="The path to the directory which contains the manifest file, and the vcpkg_installed directory.">
        <StringProperty.DataSource>
            <DataSource Persistence="ProjectFile" Label="Protobuf" />
        </StringProperty.DataSource>
    </StringProperty>
</Rule>